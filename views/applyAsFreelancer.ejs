<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%= title %></title>
    <!-- font-awesome -->
    <link
      rel="stylesheet"
      href="/fontawesome-free-5.12.1-web/css/all.min.css"
    />
    <!-- custom css -->
    <link rel="stylesheet" href="/css/applyStyle.css" />
  </head>
  <body>
    <!-- navbar -->
    <!-- nav-button -->
    <span class="nav-btn" id="nav-btn"><i class="fas fa-bars"></i></span>
    <nav class="navbar" id="navbar">
      <div class="navbar-header">
        <span class="nav-close" id="nav-close"
          ><i class="fas fa-times"></i
        ></span>
      </div>
      <ul class="nav-items">
        <li><a href="/" class="nav-link">home</a></li>
        <li><a href="#" class="nav-link">about us</a></li>
        <li><a href="#" class="nav-link">refer project</a></li>
        <li><a href="#" class="nav-link">freelancers</a></li>
      </ul>
    </nav>
    <!-- end of navbar -->
    <!-- contact form -->
    <div class="contact">
      <div class="section-center clearfix">
        <!-- contact-info -->
        <article class="contact-info">
          <!-- contact-item -->
          <div class="contact-item">
            <p class="alert" style="color: #3d9970"></p>
            <h4 class="contact-title">
              <span class="contact-icon"
                ><i class="fas fa-location-arrow"></i></span
              >Apply as a freelancer
            </h4>
          </div>
          <!-- end of contact item -->
        </article>

        <!-- contact-form -->
        <article class="contact-form">
          <!-- <h3>Want to learn more about our offer?</h3> -->
          <form
            action="/create-freelancer"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <select class="form-control" name="role" required>
                <option value="0">Select one:</option>
                <option value="front-endDeveloper">Front-end developer</option>
                <option value="back-endDeveloper">Back-end developer</option>
                <option value="Mobile-dev">Mobile developer</option>
                <option value="devOps">Dev ops</option>
                <option value="dataScientist">Data Scientist</option>
              </select>
              <!-- inputs -->
              <input
                type="email"
                placeholder="business E-mail"
                class="form-control"
                name="email"
                required
              />
              <input
                type="url"
                placeholder="Linked in profile link"
                class="form-control"
                name="lnProfile"
                required
              />
              <input
                type="text"
                placeholder="full name"
                class="form-control"
                name="name"
                required
              />
              <input
                type="url"
                placeholder="Github link"
                class="form-control"
                name="git"
                required
              />
              <input
                type="file"
                placeholder="Upload cv"
                class="form-control"
                name="cv"
                required
              />
              <input
                type="number"
                placeholder="phone number"
                class="form-control"
                name="phone"
                required
              />
              <input
                type="text"
                placeholder="Referal code"
                class="form-control"
                name="rCode"
                required
              />
            </div>
            <!-- button -->
            <button type="submit" class="submit-btn btn">submit</button>
          </form>
        </article>
      </div>
    </div>
    <!-- end of contact form -->
    <!-- footer -->
    <%- include('_footer'); %>
    <!-- end of footer -->
    <script src="/js/app.js"></script>
  </body>
</html>
